programa Ej5P3
procesos
  proceso enviarIds
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    EnviarMensaje(4,r4)
  fin
  proceso masLejos(E c:numero;E id:numero;ES cMax:numero;ES idMax:numero)
  comenzar
    si(c>=cMax)
      cMax:=c
      idMax:=id
  fin
areas
  areaR1:AreaP(4,1,4,100)
  areaR2:AreaP(6,1,6,100)
  areaR3:AreaP(8,1,8,100)
  areaR4:AreaP(10,1,10,100)
  areaFuente:AreaPC(11,11,11,11)
  areaC:AreaP(1,1,1,1)
robots
  robot tipo1
  variables
    id,av,ca:numero
    t:boolean
  comenzar
    av:=PosAv
    ca:=PosCa
    t:=V
    RecibirMensaje(id,rC)
    mientras(t)
      BloquearEsquina(11,11)
      Pos(11,11)
      si(HayPapelEnLaEsquina)
        tomarPapel
        Pos(av,ca)
        LiberarEsquina(11,11)
        depositarPapel
        mover
        av:=PosAv
        ca:=PosCa
        si(PosCa=100)
          t:=F
      sino
        Pos(av,ca)
        LiberarEsquina(11,11)
        t:=F
    EnviarMensaje(id,rC)
    EnviarMensaje(ca,rC)
  fin
  robot cordinador
  variables
    id,c,cMax,idMax:numero
  comenzar
    enviarIds
    repetir 4
      RecibirMensaje(id,*)
      si(id=1)
        RecibirMensaje(c,r1)
      sino
        si(id=2)
          RecibirMensaje(c,r2)
        sino
          si(id=3)
            RecibirMensaje(c,r3)
          sino
            si(id=4)
              RecibirMensaje(c,r4)
      masLejos(c,id,cMax,idMax)
    Informar('ElRobotQueLlegoMasLejosfue',idMax)
  fin
variables
  r1:tipo1
  r2:tipo1
  r3:tipo1
  r4:tipo1
  rC:cordinador
comenzar
  AsignarArea(rC,areaC)
  AsignarArea(r1,areaR1)
  AsignarArea(r1,areaFuente)
  AsignarArea(r2,areaR2)
  AsignarArea(r2,areaFuente)
  AsignarArea(r3,areaR3)
  AsignarArea(r3,areaFuente)
  AsignarArea(r4,areaR4)
  AsignarArea(r4,areaFuente)
  Iniciar(rC,1,1)
  Iniciar(r1,4,1)
  Iniciar(r2,6,1)
  Iniciar(r3,8,1)
  Iniciar(r4,10,1)
fin