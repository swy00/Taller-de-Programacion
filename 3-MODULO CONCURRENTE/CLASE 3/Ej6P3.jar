programa ej6P3
procesos
  proceso agarrarFlor
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso agarrarPapel
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso agarrarTodo
  comenzar
    agarrarFlor
    agarrarPapel
  fin
  
  proceso asignarData
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
  proceso recorrerCalle(E id:numero)
  comenzar
    si(id=1)
      mientras(HayFlorEnLaBolsa & ~(PosAv=100))
        depositarFlor
        mover
    sino
      si(id=2)
        mientras(HayFlorEnLaBolsa & HayPapelEnLaBolsa & ~(PosAv=100))
          depositarFlor
          depositarPapel
          mover
      sino
        si(id=3)
          mientras(HayPapelEnLaBolsa & (~(PosAv=100)))
            depositarPapel
            mover
  fin
  proceso ladoFlor(E pasos:numero)
  comenzar
    repetir pasos
      agarrarFlor
      mover
    agarrarFlor
  fin
  proceso ladoFlorPapel(E pasos:numero)
  comenzar
    repetir pasos
      agarrarTodo
      mover
    agarrarTodo
  fin
  proceso ladoPapel(E pasos:numero)
  comenzar
    repetir pasos
      agarrarPapel
      mover
    agarrarPapel
  fin
  proceso esquinaChoque(E av:numero;E ca:numero;E id:numero)
  comenzar
    BloquearEsquina(av,ca)
    mover
    si (id=1)
      agarrarFlor
    sino
      si(id=2)
        agarrarTodo
      sino
        si(id=3)
          agarrarPapel
    mover
    LiberarEsquina(av,ca)
  fin
areas
  ciudad:AreaC(1,1,100,100)
robots
