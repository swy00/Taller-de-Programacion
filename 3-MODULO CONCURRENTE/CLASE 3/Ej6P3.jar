  robot fisca
  variables
    c,id:numero
  comenzar
    c:=20
    asignarData
    repetir 3
      RecibirMensaje(id,*)
      si(id=1)
        EnviarMensaje(c,r1)
        c:=c+1
      sino
        si(id=2)
          EnviarMensaje(c,r2)
          c:=c+1
        sino
          si(id=3)
            EnviarMensaje(c,r3)
            c:=c+1
  fin
